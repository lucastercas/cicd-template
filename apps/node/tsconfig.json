{
  "version": "2.0.2",
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
